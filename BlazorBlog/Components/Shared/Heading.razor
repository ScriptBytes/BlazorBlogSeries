@using BlazorBlog.Data.Entities
@using BlazorBlog.Core
@switch(HeadingBlock.Level)
{
    case Constants.Levels.Level1:
        <h1 class="text-3xl text-gray-600 py-4">@HeadingBlock.Content</h1>
        break;
    case Constants.Levels.Level2:
        <h2 class="text-2xl text-gray-600 py-4">@HeadingBlock.Content</h2>
        break;
    case Constants.Levels.Level3:
        <h3 class="text-2xl text-gray-600 py-4">@HeadingBlock.Content</h3>
        break;
}

@code {
    [Parameter]
    public HeadingBlock HeadingBlock { get; set; }
}